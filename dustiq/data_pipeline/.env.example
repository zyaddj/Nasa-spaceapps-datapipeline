# DustIQ Data Pipeline Environment Configuration
# Copy this file to .env and fill in your credentials

# =============================================================================
# NASA EARTHDATA CREDENTIALS (Required for TEMPO and Weather data)
# =============================================================================
# Get your credentials at: https://urs.earthdata.nasa.gov/
EARTHDATA_USERNAME=zyaddjouad
EARTHDATA_PASSWORD=#ecAMNkV.dr5iMS

# =============================================================================
# LAADS DAAC TOKEN (Required for VIIRS data)
# =============================================================================
# Get your token at: https://ladsweb.modaps.eosdis.nasa.gov/tools-and-services/data-download-scripts/
LAADS_TOKEN=your_laads_token_here

# =============================================================================
# GEOGRAPHIC AND TEMPORAL CONFIGURATION
# =============================================================================
# North America bounding box: west, south, east, north
BBOX=-130,20,-60,55

# Date range for data fetching (YYYY-MM-DD format)
START_DATE=2025-09-01
END_DATE=2025-10-05

# Grid resolution for unified dataset (degrees)
GRID_RESOLUTION=0.125

# =============================================================================
# DATA PIPELINE SETTINGS
# =============================================================================
# Maximum missing data ratio (0.0 to 1.0)
MAX_MISSING_RATIO=0.3

# Minimum records per day for quality control
MIN_RECORDS_PER_DAY=12

# Rate limiting for API requests (seconds)
OPENAQ_RATE_LIMIT=1.0

# =============================================================================
# FILE PATHS
# =============================================================================
# Raw data storage directory
DATA_RAW_DIR=data/raw

# Processed data storage directory  
DATA_PROCESSED_DIR=data/processed

# Model storage directory
MODELS_DIR=models

# =============================================================================
# OPTIONAL: DEVELOPMENT SETTINGS
# =============================================================================
# Set to 'DEBUG' for verbose logging
LOG_LEVEL=INFO

# Enable data validation checks
ENABLE_VALIDATION=true

# Cache downloaded files (prevents re-downloading)
ENABLE_CACHING=true